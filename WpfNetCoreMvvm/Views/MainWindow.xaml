<Window
    x:Class="WpfNetCoreMvvm.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfNetCoreMvvm.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Main Window"
    Width="800"
    Height="450"
    DataContext="{Binding Source={StaticResource Locator}, Path=MainViewModel}"
    FontSize="28"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DataGrid ItemsSource="{Binding UserList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}" 
                  AutoGenerateColumns="True" 
                  SelectionMode="Single"
                  Grid.Column="1"/>
        <Label Content="{Binding UserName}" VerticalAlignment="Bottom" Grid.Row="0"/>
        <Label Content="" VerticalAlignment="Bottom" Grid.Row="1"/>
        <Button Command="{Binding GetUserName}" CommandParameter="1" Content="GetUserName" Grid.Row="2" Width="100" Height="50" />            
  
    
    </Grid>
</Window>